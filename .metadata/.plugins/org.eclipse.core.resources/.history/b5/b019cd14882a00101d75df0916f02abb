package atividades;

import java.util.Scanner;

public class VariosNumerosInteiros {

	public static void main(String[] args) {

		Scanner ler = new Scanner(System.in);
		int soma = 0;
		int numD;
		do {
			System.out.println("Digite numeros positivos para somar");
			numD = ler.nextInt();
			if(numD>0) {
				soma += numD;				
			}
		}
		while (numD>0);

		System.out.println("SOMA IGUAL A " + soma);
		ler.close();
	}

}
